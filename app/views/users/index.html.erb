<p id="notice"><%= notice %></p>

<h1 class="title">Utilisateurs</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Mot de passe crypté</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.crypted_password %></td>
        <td><%= link_to 'Voir profil', user, :class => "btn btn-outline-success" %></td>
        <% if current_user %>
          <td><%= link_to 'Éditer profil', edit_user_path(user), :class => "btn btn-outline-success" %></td>
          <td><%= link_to 'Supprimer', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-outline-success" %>
          </td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Créer un nouvel utilisateur', new_user_path, :class => "btn btn-outline-success" %>
