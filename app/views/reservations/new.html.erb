<%= form_for Reservation.new do |f| %>
<div class="form-group">
        <%= f.label "Nom"%>
        <%= f.text_field :name, :class => "form-control", :id => "formGroupExampleInput2", :placeholder => "Nom" %>
    </div>
    <div class="form-group">
        <%= f.label "Prénom" %>
        <%= f.text_field :firstname, :class => "form-control", :id => "formGroupExampleInput2", :placeholder => "Prénom"%>
    </div>
    <div class="form-group">
        <%= f.label "Email" %>
        <%= f.text_field :email, :class => "form-control", :id => "formGroupExampleInput2", :placeholder => "Ex : mail@mail.com" %>
    </div>
     <div class="form-group">
        <%= f.label "Nombre de tickets"%>
        <%= f.text_field :tickets_number, :class => "form-control", :id => "formGroupExampleInput2", :placeholder => "Nombre de tickets"%>
        <p>
        <%= f.submit 'Réserver' %>
    </p>
    </div>
<% end %>    