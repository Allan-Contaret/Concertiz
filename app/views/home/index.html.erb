<div class="row flex-items-md-top">
    <div class="col-md-9">
            <div class="row flex-items-md-middle">
            <% @concerts.each do |concert| %>
                <div class="col-md-6 cardo">
                    <div class="media">
                        <div class="media-left media-middle">
                            <%= link_to image_tag("concert.jpg", :alt => "Generic placeholder image", :class => "media-object", :height => "100px",
                                :width => "100px"), concert_path(concert) %>
                        </div>
                        <div class="media-body">
                            <h4 class="media-heading"><%= concert.name %> </h4>
                            <p> <%= concert.tickets_available %> places disponibles </p>
                            <p> Salle : <%= concert.concert_hall %> </p>
                            <p> Prix : <%= concert.price %> â‚¬ </p>
                            <%= link_to "Voir plus", concert_path(concert), :class => "nav-link" %>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>